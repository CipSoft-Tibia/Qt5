                  </xqx:elementConstructor>
                  <xqx:elementConstructor>
                    <xqx:tagName>author</xqx:tagName>
                    <xqx:elementContent>
                      <xqx:elementConstructor>
                        <xqx:tagName>fName</xqx:tagName>
                        <xqx:elementContent>
                          <xqx:stringConstantExpr>
                            <xqx:value>John</xqx:value>
