            </xqx:ifClause>
            <xqx:thenClause>
              <xqx:addOp>
                <xqx:firstOperand>
                  <xqx:functionCallExpr>
                    <xqx:functionName>max</xqx:functionName>
                    <xqx:arguments>
                      <xqx:pathExpr>
                        <xqx:stepExpr>
                          <xqx:filterExpr>
