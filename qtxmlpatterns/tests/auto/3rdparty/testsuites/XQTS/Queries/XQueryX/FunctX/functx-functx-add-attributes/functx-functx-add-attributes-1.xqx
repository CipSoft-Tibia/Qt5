                    <xqx:name>elements</xqx:name>
                  </xqx:varRef>
                </xqx:forExpr>
              </xqx:forClauseItem>
            </xqx:forClause>
            <xqx:returnClause>
              <xqx:computedElementConstructor>
                <xqx:tagNameExpr>
                  <xqx:functionCallExpr>
                    <xqx:functionName>node-name</xqx:functionName>
                    <xqx:arguments>
                      <xqx:varRef>
                        <xqx:name>element</xqx:name>
                      </xqx:varRef>
                    </xqx:arguments>
                  </xqx:functionCallExpr>
                </xqx:tagNameExpr>
                <xqx:contentExpr>
                  <xqx:sequenceExpr>
                    <xqx:flworExpr>
                      <xqx:forClause>
                        <xqx:forClauseItem>
                          <xqx:typedVariableBinding>
                            <xqx:varName>attrName</xqx:varName>
                          </xqx:typedVariableBinding>
                          <xqx:positionalVariableBinding>seq</xqx:positionalVariableBinding>
                          <xqx:forExpr>
                            <xqx:varRef>
                              <xqx:name>attrNames</xqx:name>
                            </xqx:varRef>
                          </xqx:forExpr>
                        </xqx:forClauseItem>
                      </xqx:forClause>
                      <xqx:returnClause>
                        <xqx:ifThenElseExpr>
                          <xqx:ifClause>
                            <xqx:pathExpr>
                              <xqx:stepExpr>
                                <xqx:filterExpr>
                                  <xqx:varRef>
                                    <xqx:name>element</xqx:name>
                                  </xqx:varRef>
                                </xqx:filterExpr>
                              </xqx:stepExpr>
                              <xqx:stepExpr>
