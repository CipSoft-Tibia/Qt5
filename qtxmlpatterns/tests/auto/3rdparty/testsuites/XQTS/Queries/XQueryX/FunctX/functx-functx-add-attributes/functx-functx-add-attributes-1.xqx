    <xqx:prolog>
      <xqx:namespaceDecl>
        <xqx:prefix>functx</xqx:prefix>
        <xqx:uri>http://www.example.com/</xqx:uri>
      </xqx:namespaceDecl>
      <xqx:namespaceDecl>
        <xqx:prefix>new</xqx:prefix>
        <xqx:uri>http://new</xqx:uri>
      </xqx:namespaceDecl>
      <xqx:functionDecl>
        <xqx:functionName xqx:prefix="functx">add-attributes</xqx:functionName>
        <xqx:paramList>
          <xqx:param>
            <xqx:varName>elements</xqx:varName>
            <xqx:typeDeclaration>
