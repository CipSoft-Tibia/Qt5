{
    include: [
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "web_engine_exe",
        args: [
            "--context-provider",
        ],
    },
    capabilities: [
        {
            protocol: [
                "fuchsia.web.ContextProvider",
                "fuchsia.web.Debug",
            ],
        },
    ],
    use: [
        {
            protocol: [
                "fuchsia.feedback.ComponentDataRegister",
                "fuchsia.feedback.CrashReportingProductRegister",
                "fuchsia.sys.Environment",
                "fuchsia.sys.Loader",
            ],
        },
    ],
    expose: [
        {
            protocol: [
                "fuchsia.web.ContextProvider",
                "fuchsia.web.Debug",
            ],
            from: "self",
        },
    ],
}
