#######################################################################
# SConscript for xlib state_tracker

Import('*')

env = env.Clone()

env.Append(CPPPATH = [
    '#/src/mapi',
    '#/src/mesa',
    '#/src/mesa/main',
])

sources = [
    'glx_api.c',
    'glx_getproc.c',
    'glx_usefont.c',
    'xm_api.c',
    'xm_st.c',
]

st_xlib = env.ConvenienceLibrary(
    target = 'st_xlib',
    source = sources,
)
Export('st_xlib')
