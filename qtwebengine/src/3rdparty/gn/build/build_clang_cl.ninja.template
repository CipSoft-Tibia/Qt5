rule cxx
  command = $cxx /nologo /showIncludes /FC $includes $cflags /c $in /Fo$out
  description = CXX $out
  deps = msvc

rule alink_thin
  command = $ar /nologo /ignore:4221 $libflags /OUT:$out $in
  description = LIB $out

rule link
  command = $ld /nologo $ldflags /OUT:$out /PDB:$out.pdb $in $solibs $libs
  description = LINK $out
