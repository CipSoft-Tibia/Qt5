rule cxx
  command = $cxx -MMD -MF $out.d $includes $cflags -c $in -o $out
  description = CXX $out
  depfile = $out.d
  deps = gcc

rule alink_thin
  command = rm -f $out && $ar rcs $out $in
  description = AR $out

rule link
  command = $ld $ldflags -o $out -Wl,--start-group $in $libs -Wl,--end-group $solibs
  description = LINK $out
